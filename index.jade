		.container-fluid(style='margin-top: 80px;')
			// Example row of columns
			.row
				form#cyos-form
					input(type='hidden', name='action', value='scrape-html')
					.col-sm-4
						.panel.panel-default
							.panel-heading
								| Edit Feed
							.panel-body
								.input-group#import-feed
									input.form-control(type='url', placeholder='Hier die URL')
									span.input-group-btn
										button.btn.btn-info(type="button") Import

						#results.panel-group
							.panel.panel-default
								.panel-heading
									a(role="button", data-toggle="collapse" href="#componentsCollapsible")
										| Components
								#componentsCollapsible.collapse.in
									.panel-body
										each componentList, componentType in api
											.form-group
												.form-group
													label(for='#{componentType}') #{componentType}
													select.form-control(name="#{componentType.toLowerCase()}", id="#{componentType}")
														each comp in componentList
															option #{comp.name}
												each comp in componentList
													- // console.log(comp)
													span(data-on-select="#{comp.name}")
														input(type='checkbox', data-enable="#{componentType}-customize-#{comp.name}")
														| Options for #{comp.name}
													.collapse.in(name='#{componentType}-customize-#{comp.name}')
														.panel.panel-default
															.panel-body
																each attr in comp.attr
																	.form-group
																		label(for='#{componentType.toLowerCase()}_#{attr.name}' data-on-select="#{comp.name}") #{attr.name}
																		input.form-control(type="text", name='#{componentType.toLowerCase()}_#{attr.name}', placeholder="#{attr.name}")

							.panel.panel-default
								.panel-heading
									a(role="button", data-toggle="collapse" href="#filtersCollapsible")
										| Filters
								#filtersCollapsible.collapse.in
									.panel-body
										.form-group
											label(for='maxResult') Maximum results
											input.form-control(type="number", name='filter_maxResult', placeholder="maximum results")
										.form-group
											label(for='maxAge') Maximum age
											input.form-control(type="number", name='filter_maxAge', placeholder="age in days")
										.panel-group
										.panel.panel-default
											.panel-heading
												a(role="button", data-toggle="collapse" href="#quickFiltersCollapsible")
													| Quick Filters
											#quickFiltersCollapsible.collapse
												.panel-body
													.form-group
														.checkbox
															label
																input(type='checkbox', name='nofb')
																| No Facebook Retweets
														.checkbox
															label
																input(type='checkbox', name='noanswers')
																| No Answers in Mailing Lists
														.checkbox
															label
																input(type='checkbox', name='nojobs')
																| Keine Stellenangebote
														.checkbox
															label
																input(type='checkbox', name='noretweet')
																| Keine Neuzwitscherungen

										.panel.panel-default
											.panel-heading
												a(role="button", data-toggle="collapse" href="#includeFiltersCollapsible")
													| Include Filters
											#includeFiltersCollapsible.collapse
												.panel-body
													.form-group
														label(for='filter_include_title') Title
														input.form-control(name='filter_include_title')
													.form-group
														label(for='filter_include_description') Description
														input.form-control(name='filter_include_description')
													.form-group
														label(for='filter_include_test') Test
														input.form-control(name='filter_include_test')

										.panel.panel-default
											.panel-heading
												a(role="button", data-toggle="collapse" href="#excludeFiltersCollapsible")
													| Exclude Filters
											#excludeFiltersCollapsible.collapse
												.panel-body
													.form-group
														label(for='filter_exclude_title') Title
														input.form-control(name='filter_exclude_title')
													.form-group
														label(for='filter_exclude_description') Description
														input.form-control(name='filter_exclude_description')
													.form-group
														label(for='filter_exclude_test') Test
														input.form-control(name='filter_exclude_test')

				.col-sm-8
					#results.panel.panel-default
						.panel-heading Results
						.panel-body
							#input-group-url.input-group
								input#inputUrl.form-control(type='text', placeholder='Hier die URL')
								span.input-group-btn
									button.btn.btn-success(type='button') Go!
							a#api-uri(href='') Copy/Paste RSS URL
							| Number of Results:
							span#results-found 0
							#result-list
